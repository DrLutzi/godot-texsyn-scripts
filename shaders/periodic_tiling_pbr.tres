[gd_resource type="Shader" format=2]

[resource]
code = "shader_type spatial;

uniform sampler2DArray samplerExemplar;
uniform sampler2DArray samplerExemplar1DFormat;
uniform float tilingScale;

void vertex() 
{}

void fragment() 
{
	vec2 UVScaled = UV/tilingScale;
	vec2 Gx = dFdx(UVScaled);
	vec2 Gy = dFdy(UVScaled);
	ALBEDO = textureGrad(samplerExemplar, vec3(UVScaled, 0), Gx, Gy).rgb;
	NORMALMAP = textureGrad(samplerExemplar, vec3(UVScaled, 1), Gx, Gy).rgb;
	DEPTH = textureGrad(samplerExemplar1DFormat, vec3(UVScaled, 0), Gx, Gy).x;
	ROUGHNESS = textureGrad(samplerExemplar1DFormat, vec3(UVScaled, 1), Gx, Gy).x;
	METALLIC = textureGrad(samplerExemplar1DFormat, vec3(UVScaled, 2), Gx, Gy).x;
	AO = textureGrad(samplerExemplar1DFormat, vec3(UVScaled, 3), Gx, Gy).x;
}"
